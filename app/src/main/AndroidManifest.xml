<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yidao.platform">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        tools:replace="android:allowBackup"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".container.ContainerActivity" />
        <activity android:name=".login.LoginSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".read.view.ReadContentActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity android:name=".info.view.SettingsActivity" />
        <activity android:name=".login.LoginClassificationActivity" />
        <activity android:name=".login.LoginInterestingActivity" />
        <activity android:name=".webview.PhotoBrowserActivity"/>
        <activity android:name=".discovery.DiscoveryDriftingBottleActivity" />
        <activity android:name=".discovery.DiscoveryEditorMessageActivity" />
        <activity android:name=".info.view.InfoMyCollectionActivity" />

        <!--微信登录回调界面-->
        <activity android:name=".wxapi.WXEntryActivity"
            android:theme="@style/AppTheme.NoActionBarTransparent"
            android:label="@string/app_name"
            android:exported="true"/>
        <activity android:name=".read.view.ItemChannelActivity" />
        <!--<activity android:name=".discovery.DiscoveryPullBottleActivity" />-->

        <!--if you change authorities please change authorities in DiscoveryFragment too!-->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.yidao.platform.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
    </application>

</manifest>