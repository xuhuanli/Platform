<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_rootview"
    android:padding="@dimen/size_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/read_list_content"
        android:layout_width="@dimen/size_240dp"
        android:layout_height="@dimen/size_80dp"
        android:layout_margin="@dimen/size_8dp"
        tools:text="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/read_list_image"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_80dp"
        android:layout_marginLeft="@dimen/size_24dp"
        android:layout_marginTop="@dimen/size_8dp"
        app:layout_constraintLeft_toRightOf="@+id/read_list_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/read_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/time"
        android:layout_marginTop="@dimen/size_8dp"
        app:layout_constraintEnd_toEndOf="@+id/read_list_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/read_list_image" />

    <TextView
        android:id="@+id/read_list_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp"
        android:drawableLeft="@drawable/ic_assignment_late_black_24dp"
        app:layout_constraintStart_toStartOf="@+id/read_list_content"
        app:layout_constraintTop_toBottomOf="@+id/read_list_content"
        tools:text="1111" />
</android.support.constraint.ConstraintLayout>