<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Style_Bp_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_40dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/size_8dp</item>
        <item name="android:paddingBottom">@dimen/size_8dp</item>
    </style>

    <style name="Style_Info_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/size_32dp</item>
        <item name="android:padding">@dimen/size_8dp</item>
    </style>

    <style name="Style_Settings_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_80dp</item>
        <item name="android:drawablePadding">@dimen/size_32dp</item>
        <item name="android:padding">@dimen/size_8dp</item>
    </style>

    <style name="Bottom_Bar_Icon">
        <item name="android:layout_width">@dimen/size_0dp</item>
        <item name="android:layout_height">@dimen/size_32dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
