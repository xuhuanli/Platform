<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App启动页 -->
    <style name="YiDao_WelCome" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--整体的背景颜色为白色-->
        <item name="android:windowBackground">@drawable/launcher</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--整体的背景颜色为白色-->
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="DriftBottleTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--整体的背景颜色为白色-->
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBarTransparent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Style_Bp_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_40dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/size_8dp</item>
        <item name="android:paddingBottom">@dimen/size_8dp</item>
    </style>

    <style name="Bottom_Bar_Icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="comment_dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 显示对话框时当前的屏幕是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Info_Number_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/size_8dp</item>
        <item name="android:textColor">@color/FF333333</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Info_Text_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Info_Line_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="Style_Info_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/FF333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Info_Msg_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff999999</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolBarMenuIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="Style_Settings_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:drawableEnd">@drawable/read_more_arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/size_16dp</item>
        <item name="android:paddingRight">@dimen/size_16dp</item>
        <item name="android:textColor">@color/FF333333</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">@dimen/size_16dp</item>
        <item name="android:paddingRight">@dimen/size_16dp</item>
        <item name="android:background">@drawable/item_ripple_selector</item>
    </style>

    <style name="BP_Item_Style">
        <item name="leftColor">@color/FF333333</item>
        <item name="leftSize">15sp</item>
        <item name="rightColor">@color/FF333333</item>
        <item name="rightSize">15sp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="setClearIcon">@drawable/ic_cancel_black_24dp</item>
    </style>

    <style name="Padding_LR16">
        <item name="android:paddingLeft">@dimen/size_16dp</item>
        <item name="android:paddingRight">@dimen/size_16dp</item>
    </style>

    <style name="Style_CAMERA_SELECTOR">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/size_16dp</item>
        <item name="android:paddingTop">@dimen/size_16dp</item>
        <item name="android:textColor">#ff007aff</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
